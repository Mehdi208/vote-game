<div class="container" id="result">
    <h1 id="resultText"></h1>
    <button class="btn neon" onclick="restart()">Rejouer</button>
</div>

<script>
// ----- CONFETTIS -----
const canvas = document.getElementById("confetti");
const ctx = canvas.getContext("2d");
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let pieces = [];
let numberOfPieces = 140;

for (let i = 0; i < numberOfPieces; i++) {
    pieces.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        size: Math.random() * 8 + 2,
        speed: Math.random() * 3 + 1,
        angle: Math.random() * 360
    });
}

function updateConfetti() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    pieces.forEach((p, i) => {
        p.y += p.speed;
        p.angle += 2;

        ctx.fillStyle = `hsl(${p.angle},100%,50%)`;
        ctx.fillRect(p.x, p.y, p.size, p.size);

        if (p.y > canvas.height) pieces[i].y = -10;
    });

    requestAnimationFrame(updateConfetti);
}

function startConfetti() {
    canvas.style.display = "block";
    updateConfetti();
}

function stopConfetti() {
    canvas.style.display = "none";
}


// ----- GAME LOGIC -----
function choose(choice) {
    document.getElementById("game").style.display = "none";
    const resultDiv = document.getElementById("result");
    const resultText = document.getElementById("resultText");

    if (choice === "Mehdi") {
        resultText.innerHTML = "üéâ F√©licitations ! Tu as gagn√© un d√©jeuner gratuit !";
        resultText.style.background = "linear-gradient(90deg,#ff0050,#00f2ea)";
        resultText.style.webkitBackgroundClip = "text";
        resultText.style.color = "transparent";
        startConfetti();
    } else {
        resultText.innerHTML = "‚ùå Dommage‚Ä¶ Tu as perdu !";
        stopConfetti();
    }

    resultDiv.style.display = "block";
}

function restart() {
    stopConfetti();
    document.getElementById("result").style.display = "none";
    document.getElementById("game").style.display = "block";
}
</script>

